<!-- modal telegram -->
<div class="modal fade" tabindex="-1" role="dialog" id="modalTelegram" data-backdrop="static">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-capitalize">Add Telegram</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form class="needs-validation" novalidate>
        <input type="hidden" name="type" value="telegram">
        <input type="hidden" name="username">
        <div class="modal-body pb-0">
          <div class="form-group">
            <label class="text-small text-muted">Label</label>
            <input type="text" class="form-control" placeholder="Label" name="label" required>
            <div class="invalid-feedback">
              Label is required.
            </div>
          </div>
          <div class="form-group">
            <label class="text-small text-muted">Token Api</label>
            <textarea name="token" class="form-control" placeholder="Token Api" style="height: 100px;"></textarea>
            <div class="invalid-feedback">
              Token Api is required.
            </div>
          </div>
          <div class="form-group">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" name="startup" class="custom-control-input" tabindex="3" checked>
              <label class="custom-control-label">Logon on startup</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>

